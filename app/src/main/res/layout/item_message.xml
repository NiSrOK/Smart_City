<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryTransparent">

    <!--<TextView
        android:id="@+id/message_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->

    <TextView
        android:id="@+id/message_status"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/userMessageTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        />

    <TextView
        android:id="@+id/message_time"
        android:textSize="@dimen/timeTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/message_serv"
        android:layout_below="@+id/message_time"
        android:textSize="@dimen/userMessageTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/message_lat"
        android:layout_below="@+id/message_status"
        android:textSize="@dimen/userCordTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/message_lon"
        android:textSize="@dimen/userCordTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/message_lat"/>

    <TextView
        android:id="@+id/message_text"
        android:layout_below="@+id/message_lon"
        android:textSize="@dimen/userMessageTextSize"
        android:textColor="@color/Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textStyle="normal"
        android:layout_marginTop="5dp"/>

    <!--
    <TextView
        android:id="@+id/message_url"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_status" /> -->

    <ImageView
        android:id="@+id/message_photo"
        android:layout_below="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:scaleType="fitCenter"/>

</RelativeLayout>