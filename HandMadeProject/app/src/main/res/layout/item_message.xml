<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="?attr/itemBgColor">

    <TextView
        android:textColor="?attr/userTextColor"
        android:textSize="?attr/userNameTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/message_user"
        android:textStyle="normal|bold"
        />

    <TextView
        android:textColor="?attr/metaTextColor"
        android:textSize="?attr/timeTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/message_time"
        />

    <TextView
        android:textColor="?attr/metaTextColor"
        android:textSize="?attr/timeTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_serv"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/message_time"
        />

    <TextView
        android:textColor="?attr/metaTextColor"
        android:textSize="?attr/userCordTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_lat"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_user"
        />
    <TextView
        android:textColor="?attr/metaTextColor"
        android:textSize="?attr/userCordTextSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_lon"
        android:layout_marginTop="5dp"
        android:layout_below="@id/message_lat"
        />

    <TextView
        android:textColor="?attr/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/message_text"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_lon"
        android:textSize="?attr/userMessageTextSize"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <TextView
        android:textColor="?attr/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/message_url"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/message_text"
        android:textSize="?attr/userMessageTextSize"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <ImageView
        android:id="@+id/message_photo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:layout_below="@+id/message_url">
    </ImageView>

</RelativeLayout>